<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 获得焦点但未按下时的背景图片 -->
    <item android:drawable="@mipmap/lighton" android:state_enabled="true" android:state_focused="true" android:state_pressed="false" ></item>
    <!-- 按下时的背景图片 -->
    <item android:drawable="@mipmap/lighton" android:state_enabled="true" android:state_pressed="true" ></item>
    <!-- 按下时的背景图片 -->
    <item android:drawable="@mipmap/lightbutton" android:state_checked="true" android:state_enabled="true" ></item>
    <item android:drawable="@mipmap/lightbutton" />
</selector>